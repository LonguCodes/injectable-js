{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"]
    },
    "plugins": [
      {"transform": "typescript-transform-paths"},
      {"transform":  "typescript-transform-paths", "afterDeclarations": true}
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}